<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      {{ seed.name }} - Seeds Dashboard
    </title>
    <script src="https://cdn.tailwindcss.com">

    </script>
  </head>
  <body class="bg-gray-50 min-h-screen">
    <nav class="bg-white shadow-sm border-b">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex">
            <div class="flex-shrink-0 flex items-center">
              <a href="{{ route('home') }}" class="flex items-center text-xl font-bold text-gray-900">
                <img src="/favicon.png" alt="Seeds Dashboard" width="32" height="32" class="h-8 w-8 mr-2 object-contain flex-shrink-0" />
                Seeds Dashboard
              </a>
            </div>
            <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
              <a
                href="{{ route('seeds.index') }}"
                class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium"
              >
                Seed templates
              </a>
              <a
                href="{{ route('proofs.index') }}"
                class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium"
              >
                QC Pulls
              </a>
              <a
                href="{{ route('settings.edit') }}"
                class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium"
              >
                Settings
              </a>
            </div>
          </div>
          <div class="flex items-center">
            <form method="POST" action="{{ route('auth.logout') }}">
              <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
              <button type="submit" class="text-gray-500 hover:text-gray-700 px-3 py-2 rounded-md text-sm font-medium">
                Logout
              </button>
            </form>
          </div>
        </div>
      </div>
    </nav>

    <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
      <div class="px-4 py-8 sm:px-0">
        @if(errorMessage)
          <div class="mb-4 bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded">
            <p>
              {{ errorMessage }}
            </p>
          </div>
        @endif

        @if(successMessage)
          <div class="mb-4 bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded">
            <p>
              {{ successMessage }}
            </p>
          </div>
        @endif

        <div class="mb-6">
          <a href="{{ route('seeds.index') }}" class="text-blue-600 hover:text-blue-800 mb-4 inline-block">‚Üê Back to Seeds</a>
          <div class="flex justify-between items-center">
            <h1 class="text-3xl font-bold">
              {{ seed.name }}
            </h1>
            <div class="flex items-center space-x-3">
              <a
                href="{{ route('seeds.edit', { publicId: seed.publicId }) }}"
                class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md"
              >
                Edit
              </a>
              <button
                type="button"
                onclick="showDeleteDialog({{ seed.proofCount }}, '{{ seed.deleteUrl }}', '{{ csrfToken }}')"
                class="bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-md"
              >
                Delete
              </button>
              <form method="POST" action="{{ seed.runUrl }}">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
                <button
                  type="submit"
                  class="bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-md"
                >
                  Run Seed Now
                </button>
              </form>
            </div>
          </div>
        </div>

        <div class="bg-white shadow rounded-lg p-6 mb-6">
          <h2 class="text-xl font-semibold mb-4">
            Seed Details
          </h2>
          <dl class="grid grid-cols-1 gap-4 sm:grid-cols-2 mb-6">
            <div>
              <dt class="text-sm font-medium text-gray-500">
                Front (Template ID or URL)
              </dt>
              <dd class="mt-1 text-sm text-gray-900 break-all">
                {{ seed.front }}
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">
                Back (Template ID or URL)
              </dt>
              <dd class="mt-1 text-sm text-gray-900 break-all">
                {{ seed.back }}
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">
                Status
              </dt>
              <dd class="mt-1">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full {{ seed.statusClass }}">
                  {{ seed.status }}
                </span>
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">
                Cadence
              </dt>
              <dd class="mt-1 text-sm text-gray-900">
                {{ seed.cadence }}
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">
                Last Run
              </dt>
              <dd class="mt-1 text-sm text-gray-900">
                {{ seed.lastRunAt || 'Never' }}
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">
                Next Run
              </dt>
              <dd class="mt-1 text-sm text-gray-900">
                {{ seed.nextRunAt || 'Not scheduled' }}
              </dd>
            </div>
          </dl>

          <div class="border-t pt-4 mt-4">
            <dt class="text-sm font-medium text-gray-500 mb-3">
              Recipient Addresses
            </dt>
            <dd class="mt-1">
              <div class="space-y-3">
                @each(address in seed.addresses)
                  <div class="border border-gray-200 rounded-lg p-4 bg-gray-50">
                    <div class="flex justify-between items-start">
                      <div class="flex-1">
                        <div class="text-sm font-medium text-gray-900 mb-1">
                          Address {{ address.index }}
                        </div>
                        <div class="text-sm text-gray-600">
                          @if(address.name && address.name !== 'N/A')
                            <div>
                              {{ address.name }}
                            </div>
                          @endif
                          @if(address.company)
                            <div>
                              {{ address.company }}
                            </div>
                          @endif
                          <div>
                            {{ address.address_line1 }}
                          </div>
                          @if(address.address_line2)
                            <div>
                              {{ address.address_line2 }}
                            </div>
                          @endif
                          <div>
                            {{ address.address_city }}, {{ address.address_state }} {{ address.address_zip }}
                          </div>
                          @if(address.address_country && address.address_country !== 'US')
                            <div>
                              {{ address.address_country }}
                            </div>
                          @endif
                          @if(address.phone)
                            <div class="mt-1 text-gray-500">
                              Phone: {{ address.phone }}
                            </div>
                          @endif
                          @if(address.email)
                            <div class="text-gray-500">
                              Email: {{ address.email }}
                            </div>
                          @endif
                          @if(address.description)
                            <div class="mt-1 text-gray-500 italic">
                              {{ address.description }}
                            </div>
                          @endif
                        </div>
                      </div>
                    </div>
                  </div>
                @endeach
              </div>
            </dd>
          </div>
        </div>

        <div class="bg-white shadow rounded-lg overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-xl font-semibold">
              QC Pulls
            </h2>
          </div>
          <div id="proofs-content">
          </div>
          <script>
            const proofsBase64 = "{{ seed.proofsBase64 }}";

            const csrfToken = "{{ csrfToken }}";

            const proofs = JSON.parse(atob(proofsBase64));

            const container = document.getElementById("proofs-content");

            if (!proofs || proofs.length === 0) {
              container.innerHTML = '<div class="p-6 text-center text-gray-500">No QC pulls yet. Run this seed to create a QC pull.</div>';
            } else {
              const rows = proofs.map(proof => {
                return `
                                        <tr>
                                          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 font-mono">${proof.publicId || "-"}</td>
                                          <td class="px-6 py-4 whitespace-nowrap"><span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">${proof.status}</span></td>
                                          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${proof.createdAt}</td>
                                          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${proof.mailedAt || "-"}</td>
                                          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${proof.deliveredAt || "-"}</td>
                                          <td class="px-6 py-4 whitespace-nowrap text-sm space-x-2">
                                            <a href="${proof.showUrl}" class="text-blue-600 hover:text-blue-800">View</a>
                                            <button
                                              type="button"
                                              onclick="showProofDeleteDialog('${proof.deleteUrl}', csrfToken)"
                                              class="text-red-600 hover:text-red-800"
                                            >
                                              Delete
                                            </button>
                                          </td>
                                        </tr>
                                      `;
              }).join("");
              container.innerHTML = `
                                        <table class="min-w-full divide-y divide-gray-200">
                                          <thead class="bg-gray-50">
                                            <tr>
                                              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Public ID</th>
                                              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
                                              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mailed</th>
                                              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Delivered</th>
                                              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                                            </tr>
                                          </thead>
                                          <tbody class="bg-white divide-y divide-gray-200">${rows}</tbody>
                                        </table>
                                      `;
            }
          </script>
        </div>
      </div>
    </main>

    <!-- Delete Confirmation Dialog -->
    <div
      id="deleteDialog"
      class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50"
    >
      <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
        <div class="mt-3">
          <h3 class="text-lg font-medium text-gray-900 mb-4">
            Delete Seed
          </h3>
          <div id="deleteDialogContent">
          </div>
          <div class="flex justify-end space-x-3 mt-4">
            <button
              type="button"
              onclick="closeDeleteDialog()"
              class="px-4 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400"
            >
              Cancel
            </button>
            <form id="deleteForm" method="POST" style="display: inline;">
              <input type="hidden" name="_csrf" id="deleteCsrfToken" />
              <input type="hidden" name="delete_proofs" id="deleteProofsInput" value="false" />
              <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700">
                Delete Seed
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <script>
      function showDeleteDialog(proofCount, deleteUrl, csrfToken) {
        const dialog = document.getElementById("deleteDialog");
        const content = document.getElementById("deleteDialogContent");
        const form = document.getElementById("deleteForm");
        const csrfInput = document.getElementById("deleteCsrfToken");
        const deleteProofsInput = document.getElementById("deleteProofsInput");
        form.action = deleteUrl;
        csrfInput.value = csrfToken;
        if (proofCount > 0) {
          content.innerHTML = `
                        <p class="text-sm text-gray-600 mb-4">
                          This seed has ${proofCount} QC pull(s). What would you like to do with them?
                        </p>
                        <div class="space-y-2">
                          <label class="flex items-center">
                            <input
                              type="radio"
                              name="proof_action"
                              value="delete"
                              checked
                              onchange="document.getElementById('deleteProofsInput').value = 'true'"
                              class="mr-2"
                            />
                            <span class="text-sm text-gray-700">Delete all QC pulls along with the seed</span>
                          </label>
                          <label class="flex items-center">
                            <input
                              type="radio"
                              name="proof_action"
                              value="orphan"
                              onchange="document.getElementById('deleteProofsInput').value = 'false'"
                              class="mr-2"
                            />
                            <span class="text-sm text-gray-700">Keep QC pulls but orphan them (seed link will be broken)</span>
                          </label>
                        </div>
                      `;
          deleteProofsInput.value = "true"; // Default to deleting proofs
        } else {
          content.innerHTML = `
                        <p class="text-sm text-gray-600 mb-4">
                          Are you sure you want to delete this seed? This action cannot be undone.
                        </p>
                      `;
          deleteProofsInput.value = "false";
        }
        dialog.classList.remove("hidden");
      }

      function closeDeleteDialog() {
        document.getElementById("deleteDialog").classList.add("hidden");
      }
      // Close dialog when clicking outside

      document.getElementById("deleteDialog").addEventListener("click", function(e) {
        if (e.target === this) {
          closeDeleteDialog();
        }
      });
      // Proof delete dialog functions

      function showProofDeleteDialog(deleteUrl, csrfToken) {
        const dialog = document.getElementById("proofDeleteDialog");
        const form = document.getElementById("proofDeleteForm");
        const csrfInput = document.getElementById("proofDeleteCsrfToken");
        form.action = deleteUrl;
        csrfInput.value = csrfToken;
        dialog.classList.remove("hidden");
      }

      function closeProofDeleteDialog() {
        document.getElementById("proofDeleteDialog").classList.add("hidden");
      }
      // Close proof delete dialog when clicking outside

      const proofDeleteDialog = document.getElementById("proofDeleteDialog");

      if (proofDeleteDialog) {
        proofDeleteDialog.addEventListener("click", function(e) {
          if (e.target === this) {
            closeProofDeleteDialog();
          }
        });
      }
    </script>

    <!-- Proof Delete Confirmation Dialog -->
    <div
      id="proofDeleteDialog"
      class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50"
    >
      <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
        <div class="mt-3">
          <h3 class="text-lg font-medium text-gray-900 mb-4">
            Delete QC Pull
          </h3>
          <div id="proofDeleteDialogContent">
            <p class="text-sm text-gray-600 mb-4">
              Are you sure you want to delete this QC pull? This action cannot be undone.
            </p>
          </div>
          <div class="flex justify-end space-x-3 mt-4">
            <button
              type="button"
              onclick="closeProofDeleteDialog()"
              class="px-4 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400"
            >
              Cancel
            </button>
            <form id="proofDeleteForm" method="POST" style="display: inline;">
              <input type="hidden" name="_csrf" id="proofDeleteCsrfToken" />
              <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700">
                Delete QC Pull
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
