<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ seed.name }} - Seeds Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-50 min-h-screen">
    <nav class="bg-white shadow-sm border-b">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex">
            <div class="flex-shrink-0 flex items-center">
              <a href="{{ route('home') }}" class="text-xl font-bold text-gray-900">Seeds Dashboard</a>
            </div>
            <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
              <a
                href="{{ route('seeds.index') }}"
                class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium"
              >
                Seeds
              </a>
              <a
                href="{{ route('proofs.index') }}"
                class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium"
              >
                Proofs
              </a>
              <a
                href="{{ route('settings.edit') }}"
                class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium"
              >
                Settings
              </a>
            </div>
          </div>
          <div class="flex items-center">
            <form method="POST" action="{{ route('auth.logout') }}">
              <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
              <button type="submit" class="text-gray-500 hover:text-gray-700 px-3 py-2 rounded-md text-sm font-medium">
                Logout
              </button>
            </form>
          </div>
        </div>
      </div>
    </nav>

    <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
      <div class="px-4 py-8 sm:px-0">
        @if(errorMessage)
          <div class="mb-4 bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded">
            <p>{{ errorMessage }}</p>
          </div>
        @endif
        
        @if(successMessage)
          <div class="mb-4 bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded">
            <p>{{ successMessage }}</p>
          </div>
        @endif

        <div class="mb-6">
          <a href="{{ route('seeds.index') }}" class="text-blue-600 hover:text-blue-800 mb-4 inline-block">‚Üê Back to Seeds</a>
          <div class="flex justify-between items-center">
            <h1 class="text-3xl font-bold">{{ seed.name }}</h1>
            <form method="POST" action="{{ seed.runUrl }}">
              <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
              <button type="submit" class="bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-md">
                Run Seed Now
              </button>
            </form>
          </div>
        </div>

        <div class="bg-white shadow rounded-lg p-6 mb-6">
          <h2 class="text-xl font-semibold mb-4">Seed Details</h2>
          <dl class="grid grid-cols-1 gap-4 sm:grid-cols-2">
            <div>
              <dt class="text-sm font-medium text-gray-500">Front Template ID</dt>
              <dd class="mt-1 text-sm text-gray-900">{{ seed.frontTemplateId }}</dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Back Template ID</dt>
              <dd class="mt-1 text-sm text-gray-900">{{ seed.backTemplateId }}</dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Status</dt>
              <dd class="mt-1">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full {{ seed.statusClass }}">
                  {{ seed.status }}
                </span>
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Cadence</dt>
              <dd class="mt-1 text-sm text-gray-900">{{ seed.cadence }}</dd>
            </div>
          </dl>
        </div>

        <div class="bg-white shadow rounded-lg overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-xl font-semibold">Proofs</h2>
          </div>
          <div id="proofs-content"></div>
          <script>
            const proofsBase64 = '{{ seed.proofsBase64 }}';
            const proofs = JSON.parse(atob(proofsBase64));
            const container = document.getElementById('proofs-content');
            
            if (!proofs || proofs.length === 0) {
              container.innerHTML = '<div class="p-6 text-center text-gray-500">No proofs yet. Run this seed to create a proof.</div>';
            } else {
              const rows = proofs.map(proof => `
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">${proof.status}</span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${proof.createdAt}</td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm">
                    <a href="${proof.showUrl}" class="text-blue-600 hover:text-blue-800">View</a>
                  </td>
                </tr>
              `).join('');
              
              container.innerHTML = `
                <table class="min-w-full divide-y divide-gray-200">
                  <thead class="bg-gray-50">
                    <tr>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                  </thead>
                  <tbody class="bg-white divide-y divide-gray-200">${rows}</tbody>
                </table>
              `;
            }
          </script>
        </div>
      </div>
    </main>
  </body>
</html>
