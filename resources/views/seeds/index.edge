<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Seeds Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-50 min-h-screen">
    <nav class="bg-white shadow-sm border-b">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex">
            <div class="flex-shrink-0 flex items-center">
              <a href="{{ route('home') }}" class="text-xl font-bold text-gray-900">Seeds Dashboard</a>
            </div>
            <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
              <a
                href="{{ route('seeds.index') }}"
                class="border-blue-500 text-gray-900 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium"
              >
                Seeds
              </a>
              <a
                href="{{ route('proofs.index') }}"
                class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium"
              >
                Proofs
              </a>
              <a
                href="{{ route('settings.edit') }}"
                class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium"
              >
                Settings
              </a>
            </div>
          </div>
          <div class="flex items-center">
            <form method="POST" action="{{ route('auth.logout') }}">
              <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
              <button type="submit" class="text-gray-500 hover:text-gray-700 px-3 py-2 rounded-md text-sm font-medium">
                Logout
              </button>
            </form>
          </div>
        </div>
      </div>
    </nav>

    <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
      <div class="px-4 py-8 sm:px-0">
        <div class="flex justify-between items-center mb-6">
          <h1 class="text-3xl font-bold">Seeds</h1>
          <a
            href="{{ route('seeds.create') }}"
            class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md"
          >
            New Seed
          </a>
        </div>

        <div id="seeds-content"></div>
        <script>
          const seedsBase64 = '{{ seedsBase64 }}';
          const csrfToken = '{{ csrfToken }}';
          const seeds = JSON.parse(atob(seedsBase64));
          const container = document.getElementById('seeds-content');

          if (!seeds || seeds.length === 0) {
            container.innerHTML = `
              <div class="bg-white shadow rounded-lg p-8 text-center">
                <p class="text-gray-500 mb-4">No seeds yet. Create your first seed to get started.</p>
                <a href="{{ route('seeds.create') }}" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md">Create Seed</a>
              </div>
            `;
          } else {
            const rows = seeds.map(seed => `
              <tr>
                <td class="px-6 py-4 whitespace-nowrap">
                  <a href="${seed.showUrl}" class="text-blue-600 hover:text-blue-800 font-medium">${seed.name}</a>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full ${seed.statusClass}">${seed.status}</span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${seed.cadence}</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${seed.createdAt}</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm space-x-2">
                  <a href="${seed.showUrl}" class="text-blue-600 hover:text-blue-800">View</a>
                  <a href="${seed.editUrl}" class="text-green-600 hover:text-green-800">Edit</a>
                  <button
                    type="button"
                    onclick="showDeleteDialog(${seed.proofCount}, '${seed.deleteUrl}', '${csrfToken}')"
                    class="text-red-600 hover:text-red-800"
                  >
                    Delete
                  </button>
                </td>
              </tr>
            `).join('');

            container.innerHTML = `
              <div class="bg-white shadow rounded-lg overflow-hidden">
                <table class="min-w-full divide-y divide-gray-200">
                  <thead class="bg-gray-50">
                    <tr>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cadence</th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                  </thead>
                  <tbody class="bg-white divide-y divide-gray-200">${rows}</tbody>
                </table>
              </div>
            `;
          }
        </script>
      </div>
    </main>

    <!-- Delete Confirmation Dialog -->
    <div id="deleteDialog" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
      <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
        <div class="mt-3">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Delete Seed</h3>
          <div id="deleteDialogContent"></div>
          <div class="flex justify-end space-x-3 mt-4">
            <button
              type="button"
              onclick="closeDeleteDialog()"
              class="px-4 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400"
            >
              Cancel
            </button>
            <form id="deleteForm" method="POST" style="display: inline;">
              <input type="hidden" name="_csrf" id="deleteCsrfToken" />
              <input type="hidden" name="delete_proofs" id="deleteProofsInput" value="false" />
              <button
                type="submit"
                class="px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700"
              >
                Delete Seed
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <script>
      function showDeleteDialog(proofCount, deleteUrl, csrfToken) {
        const dialog = document.getElementById('deleteDialog')
        const content = document.getElementById('deleteDialogContent')
        const form = document.getElementById('deleteForm')
        const csrfInput = document.getElementById('deleteCsrfToken')
        const deleteProofsInput = document.getElementById('deleteProofsInput')

        form.action = deleteUrl
        csrfInput.value = csrfToken

        if (proofCount > 0) {
          content.innerHTML = `
            <p class="text-sm text-gray-600 mb-4">
              This seed has ${proofCount} proof(s). What would you like to do with them?
            </p>
            <div class="space-y-2">
              <label class="flex items-center">
                <input
                  type="radio"
                  name="proof_action"
                  value="delete"
                  checked
                  onchange="document.getElementById('deleteProofsInput').value = 'true'"
                  class="mr-2"
                />
                <span class="text-sm text-gray-700">Delete all proofs along with the seed</span>
              </label>
              <label class="flex items-center">
                <input
                  type="radio"
                  name="proof_action"
                  value="orphan"
                  onchange="document.getElementById('deleteProofsInput').value = 'false'"
                  class="mr-2"
                />
                <span class="text-sm text-gray-700">Keep proofs but orphan them (seed link will be broken)</span>
              </label>
            </div>
          `
          deleteProofsInput.value = 'true' // Default to deleting proofs
        } else {
          content.innerHTML = `
            <p class="text-sm text-gray-600 mb-4">
              Are you sure you want to delete this seed? This action cannot be undone.
            </p>
          `
          deleteProofsInput.value = 'false'
        }

        dialog.classList.remove('hidden')
      }

      function closeDeleteDialog() {
        document.getElementById('deleteDialog').classList.add('hidden')
      }

      // Close dialog when clicking outside
      document.getElementById('deleteDialog').addEventListener('click', function (e) {
        if (e.target === this) {
          closeDeleteDialog()
        }
      })
    </script>
  </body>
</html>
