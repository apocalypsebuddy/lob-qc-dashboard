<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      Settings - Seeds Dashboard
    </title>
    <script src="https://cdn.tailwindcss.com">

    </script>
  </head>
  <body class="bg-gray-50 min-h-screen">
    <nav class="bg-white shadow-sm border-b">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex">
            <div class="flex-shrink-0 flex items-center">
              <a href="{{ route('home') }}" class="flex items-center text-xl font-bold text-gray-900">
                <img src="/favicon.png" alt="Seeds Dashboard" width="32" height="32" class="h-8 w-8 mr-2 object-contain flex-shrink-0" />
                Seeds Dashboard
              </a>
            </div>
            <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
              <a
                href="{{ route('seeds.index') }}"
                class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium"
              >Seed templates</a>
              <a
                href="{{ route('proofs.index') }}"
                class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium"
              >QC Pulls</a>
              <a
                href="{{ route('settings.edit') }}"
                class="border-blue-500 text-gray-900 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium"
              >Settings</a>
            </div>
          </div>
          <div class="flex items-center">
            <form method="POST" action="{{ route('auth.logout') }}">
              <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
              <button type="submit" class="text-gray-500 hover:text-gray-700 px-3 py-2 rounded-md text-sm font-medium">Logout</button>
            </form>
          </div>
        </div>
      </div>
    </nav>

    <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
      <div class="px-4 py-8 sm:px-0">
        <div class="max-w-2xl mx-auto bg-white shadow rounded-lg p-6">
          <h2 class="text-2xl font-bold mb-6">
            Settings
          </h2>

          <div
            id="flash-messages"
            data-error-message="{{ errorMessage || '' }}"
            data-success-message="{{ successMessage || '' }}"
          >
          </div>

          <form method="POST" action="{{ route('settings.update') }}">
            <input type="hidden" name="_csrf" value="{{ csrfToken }}" />

            <div class="mb-4">
              <label for="lobApiKey" class="block text-sm font-medium text-gray-700 mb-1">Lob API Key</label>
              <div id="current-key-display" data-masked-key="{{ maskedApiKey || '' }}">
              </div>
              <input
                type="text"
                id="lobApiKey"
                name="lobApiKey"
                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
              />
              <p id="help-text" class="mt-1 text-sm text-gray-500">
              </p>
            </div>
            <script>
              (function() {
                // Get data from data attributes
                const flashContainer = document.getElementById("flash-messages");
                const errorMessage = flashContainer.getAttribute("data-error-message") || "";
                const successMessage = flashContainer.getAttribute("data-success-message") || "";
                const currentKeyDisplay = document.getElementById("current-key-display");
                const maskedApiKey = currentKeyDisplay.getAttribute("data-masked-key") || "";
                const helpText = document.getElementById("help-text");
                const lobApiKeyInput = document.getElementById("lobApiKey");
                console.log("Error message:", errorMessage);
                console.log("Success message:", successMessage);
                console.log("Masked API Key:", maskedApiKey);
                // Format and display error message
                if (errorMessage && errorMessage.trim().length > 0) {
                  const errorHtml = `<div class="mb-4 bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded"><p>${errorMessage}</p></div>`;
                  flashContainer.innerHTML = errorHtml;
                }
                // Format and display success message
                if (successMessage && successMessage.trim().length > 0) {
                  const successHtml = `<div class="mb-4 bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded"><p>${successMessage}</p></div>`;
                  flashContainer.innerHTML += successHtml;
                }
                // Check if maskedApiKey exists and is not empty
                if (maskedApiKey && maskedApiKey.trim().length > 0) {
                  console.log("Displaying masked API key");
                  currentKeyDisplay.innerHTML = `
                                                <div class="mb-2 p-2 bg-gray-50 border border-gray-200 rounded text-sm">
                                                  <span class="text-gray-600">Current value: </span>
                                                  <span class="font-mono text-gray-800">${maskedApiKey}</span>
                                                </div>
                                              `;
                  lobApiKeyInput.placeholder = "Enter new API key to update";
                  helpText.textContent = "Enter a new API key to update it, or leave blank to keep the current key";
                } else {
                  console.log("No masked API key to display");
                  lobApiKeyInput.placeholder = "Enter your Lob API key";
                  helpText.textContent = "Enter your Lob API key to enable postcard creation";
                }
              })();
            </script>

            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md">
              Save Settings
            </button>
          </form>
        </div>
      </div>
    </main>
  </body>
</html>
